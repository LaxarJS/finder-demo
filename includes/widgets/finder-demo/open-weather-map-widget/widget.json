{
   "name": "OpenWeatherMapWidget",
   "description": "A widget displaying weather info for the given location.",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "controls": [
      "laxar-uikit/controls/i18n",
      "finder-box-control",
      "finder-demo-utilities"
   ],

   "resources": {
      "watch": [
         "*.js"
      ]
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {

         "search": {
            "type": "object",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "format": "topic"
               }
            }
         },

         "locations": {
            "type": "object",
            "properties": {
               "resource": {
                  "type": "string",
                  "format": "topic"
               },
               "searchingOn": {
                  "type": "array",
                  "items": {
                     "type": "string",
                     "format": "topic"
                  },
                  "description": "One or more flags, indicating that geocoding is still in progress."
               }
            }
         },

         "i18n": {
            "type": "object",
            "properties": {
               "locale": {
                  "type": "string",
                  "default": "default"
               }
            }
         }

      }
   }
}
