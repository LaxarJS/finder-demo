{
   "name": "omdb-search-widget",
   "description": "A widget displaying results found on omdb.org.",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "controls": [
      "finder-box-control",
      "finder-demo-utilities"
   ],

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {

         "search": {
            "type": "object",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "format": "topic",
                  "axRole": "inlet"
               }
            }
         },

         "i18n": {
            "type": "object",
            "properties": {
               "locale": {
                  "type": "string",
                  "format": "topic",
                  "axRole": "inlet",
                  "default": "default"
               }
            }
         }

      }
   }
}
