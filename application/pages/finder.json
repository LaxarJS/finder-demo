{
   "layout": "application",

   "areas": {

      "axActivities": [
         {
            "widget": "language-selection-activity",
            "id": "languageSelectionActivity"
         },
         {
            "widget": "laxar-developer-tools-widget",
            "features": {
               "open": {
                  "onGlobalMethod": "goDevelop"
               }
            }
         },
         {
            "widget": "geocoding-activity",
            "id": "geocodingActivity",
            "features": {
               "search": {
                  "resource": "searchString"
               },
               "locations": {
                  "resource": "availableLocations",
                  "searching": "geocodingInProgress"
               }
            }
         }
      ],

      "searchBox": [
         {
            "widget": "search-box-widget",
            "id": "searchBox",
            "features": {
               "search": {
                  "resource": "searchString"
               }
            }
         }
      ],

      "content1a": [
         {
            "widget": "wikipedia-search-widget",
            "id": "wikipediaSearch",
            "features": {
               "search": {
                  "resource": "searchString"
               }
            },
            "enabled": true
         }
      ],

      "content1b": [
         {
            "widget": "music-brainz-search-widget",
            "id": "musicBrainzSearch",
            "features": {
               "search": {
                  "resource": "searchString"
               }
            },
            "enabled": true
         }
      ],

      "content2a": [
         {
            "widget": "open-street-map-widget",
            "id": "openStreetMap",
            "features": {
               "search": {
                  "resource": "searchString"
               },
               "locations": {
                  "resource": "availableLocations",
                  "searchingOn": [ "geocodingInProgress" ]
               }
            },
            "enabled": true
         }
      ]
   }
}
